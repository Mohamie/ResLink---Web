@page "/events"

<EditForm Model="_event" OnValidSubmit="AddEvent">
    <RadzenCard class="mb-4">
        <RadzenFieldset Text="Make an Event">
            <div class="row my-3">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Event Title" />
                </div>
                <div class="col-md-8">
                    <RadzenTextBox @bind-Value="_event.EventTitle" style="width: 100%;" Placeholder="Title" />
                </div>
            </div>
            <div class="row my-3">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Event Date" />
                </div>
                <div class="col-md-8">
                    <RadzenDatePicker TValue="DateTime?" ShowTime="true" Placeholder="Schedule Date"/>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Venue" />
                </div>
                <div class="col-md-8">
                    <RadzenTextBox style="width: 100%;" Placeholder="Venue"/>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Event Description" />
                </div>
                <div class="col-md-8">
                    <RadzenTextArea @bind-Value="_event.EventDescription" style="width: 100%;" Placeholder="Event Message"/>
                </div>
            </div>

            <RadzenButton class="my-3" type="submit" Text="Save" ButtonStyle="Radzen.ButtonStyle.Info" />

        </RadzenFieldset>
    </RadzenCard>
</EditForm>

