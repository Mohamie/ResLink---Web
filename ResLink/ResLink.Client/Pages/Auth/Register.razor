@layout AuthLayout



<h3 class="mt-5">Register Your Residence</h3>

<div class="row">
    <div class="col-7">
        <EditForm Model="@residence" OnValidSubmit="RegisterResidence">

            <RadzenCard>
                <label>Residence Name</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <label>Residence Gender</label>
                <RadzenTextBox></RadzenTextBox>

                <label>Manager First Name</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <label>Manager Last Name</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <label>Manager Email</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <label>Password</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <label>Confirm Password</label>
                <RadzenTextBox class="my-2"></RadzenTextBox>

                <RadzenButton class="my-2" Text="Register" ButtonStyle="Radzen.ButtonStyle.Success" />

            </RadzenCard>

        </EditForm>

    </div>
    <div class="col-5">
        <RadzenLink class="text-primary" href="/auth/login" Text="Back To Login"/>
    </div>
</div>

    




